manifest {
  name = 'qcflow-rnaseq'
  description = 'QC and alignemnt of short reads to reference genome.'
  homePage = 'https://github.com/ccdmb/qcflow-rnaseq'
  author = 'Kristina K. Gagalova'
  mainScript = 'main.nf'
  nextflowVersion = '>=22.03'
  version = "v1.0.0"
}

params.custom_config_base = "."
includeConfig("nfcore_custom.config")

process {
    // ALL PROCESSES
    cache        = true
    scratch      = false
    stageInMode  = 'symlink'
    stageOutMode = 'rsync'

    // DEFAULT RESOURCES
    max_cpus         = 8
    memory           = 4.GB
    
    // SPECIFIC RESOURCES
    withLabel: 'hisat' {
	cpus = { check_max( 32 * task.attempt, 'cpus' ) }
        memopry = { check_max( 200.GB * task.attempt, 'memory' ) }
        time = { check_max( 6.h * task.attempt, 'time' ) }
    }

    withLabel: 'hisat_highmem' {
	cpus = { check_max( 32 * task.attempt, 'cpus' ) }
        memopry = { check_max( 700.GB * task.attempt, 'memory' ) }
        time = { check_max( 6.h * task.attempt, 'time' ) }
    }

    withLabel: 'star' {
	cpus = { check_max( 32 * task.attempt, 'cpus' ) }
        memopry = { check_max( 100.GB * task.attempt, 'memory' ) }
        time = { check_max( 6.h * task.attempt, 'time' ) }
    }

    withLabel: 'fastp' {
	cpus = { check_max( 32 * task.attempt, 'cpus' ) }
        memopry = { check_max( 20.GB * task.attempt, 'memory' ) }
        time = { check_max( 6.h * task.attempt, 'time' ) }
    }

    withLabel: 'featurecounts' {
	cpus = { check_max( 32 * task.attempt, 'cpus' ) }
        memopry = { check_max( 20.GB * task.attempt, 'memory' ) }
        time = { check_max( 6.h * task.attempt, 'time' ) }
    }

    withLabel: 'bbt' {
	cpus = { check_max( 32 * task.attempt, 'cpus' ) }
        memopry = { check_max( 500.GB * task.attempt, 'memory' ) }
        time = { check_max( 6.h * task.attempt, 'time' ) }
    }

}

plugins {
  id 'nf-validation'
}

// Function to ensure that resource requirements don't go beyond
// a maximum limit
def check_max(obj, type) {
  if (type == 'memory') {
    try {
      if (obj.compareTo(params.max_memory as nextflow.util.MemoryUnit) == 1)
        return params.max_memory as nextflow.util.MemoryUnit
      else
        return obj
    } catch (all) {
      println "   ### ERROR ###   Max memory '${params.max_memory}' is not valid! Using default value: $obj"
      return obj
    }
  } else if (type == 'time') {
    try {
      if (obj.compareTo(params.max_time as nextflow.util.Duration) == 1)
        return params.max_time as nextflow.util.Duration
      else
        return obj
    } catch (all) {
      println "   ### ERROR ###   Max time '${params.max_time}' is not valid! Using default value: $obj"
      return obj
    }
  } else if (type == 'cpus') {
    try {
      return Math.min( obj, params.max_cpus as int )
    } catch (all) {
      println "   ### ERROR ###   Max cpus '${params.max_cpus}' is not valid! Using default value: $obj"
      return obj
    }
  }
}
